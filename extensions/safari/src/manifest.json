{
  "manifest_version": 2,
  "name": "SquareX File Scanner",
  "version": "0.1.0",
  "description": "Real-time file security analysis using WebAssembly technology",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*",
    "http://[::1]:8080/*",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "SquareX File Scanner"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    "wasm_bg.wasm",
    "wasm.js",
    "icons/*"
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "96": "icons/icon96.svg",
    "128": "icons/icon128.svg"
  }
}
