{
  "manifest_version": 2,
  "name": "SquareX File Scanner",
  "version": "0.1.0",
  "description": "Real-time file security analysis using WebAssembly technology",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*", "https://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "SquareX File Scanner"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    "wasm/*",
    "shared/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "96": "icons/icon96.svg",
    "128": "icons/icon128.svg"
  }
}
